        <Button 
            android:id="@+id/btn5"
		    android:width="120dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/btn5Text">
        </Button>
        
        <Button 
            android:id="@+id/btn6"
		    android:width="120dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/btn6Text">
        </Button>
        
        <Button 
            android:id="@+id/btn7"
		    android:width="120dp" 
		    android:layout_width="wrap_content"
