        <Button 
            android:id="@+id/btn1"
		    android:width="120dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/btn1Text">
        </Button>
        
        <Button 
            android:id="@+id/btn2"
		    android:width="120dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
